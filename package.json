{
  "name": "vtc-connect-pro-2025",
  "version": "1.0.0",
  "description": "VTC Connect Pro 2025 - Plateforme de gestion complÃ¨te pour chauffeurs VTC",
  "private": true,
  "workspaces": [
    "app",
    "api"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=app",
    "dev:app": "npm run dev --workspace=app",
    "dev:api": "npm run dev --workspace=api",
    "dev:all": "concurrently \"npm run dev:app\" \"npm run dev:api\"",
    "build": "npm run build --workspace=app",
    "build:app": "npm run build --workspace=app",
    "build:api": "echo 'No build step for API'",
    "start": "npm run start --workspace=app",
    "start:app": "npm run start --workspace=app",
    "start:api": "npm run start --workspace=api",
    "lint": "npm run lint --workspace=app",
    "lint:app": "npm run lint --workspace=app",
    "test": "npm run test --workspace=api",
    "test:api": "npm run test --workspace=api",
    "vercel-build": "npm ci --include=dev --legacy-peer-deps && npm run build --workspace=app",
    "vercel-install": "npm ci --include=dev --legacy-peer-deps",
    "postinstall": "npm run postinstall --workspace=app --if-present",
    "verify-deployment": "./scripts/verify-deployment.sh",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose up --build",
    "install:all": "npm install && npm install --workspace=app && npm install --workspace=api"
  },
  "dependencies": {
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "lucide-react": "^0.263.1",
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
