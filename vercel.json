{
  "version": 2,
  "framework": "nextjs",
  "name": "vtc-connect-pro-2025",
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm run vercel-install",
  "outputDirectory": "app/.next",
  "functions": {
    "app/src/app/api/**/*.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "regions": ["fra1"],
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
